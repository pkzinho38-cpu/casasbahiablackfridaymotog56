{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/enviar-para-sheets.js" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "functions": {
    "api/enviar-para-sheets.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}

